<h1><%= link_to 'Customers', customers_url %> <%= link_to 'Banned customers', banned_url %> </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.description %></td>
        <td><%= link_to 'Unban', controller: "customers", action: "unban", id: customer, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p id="notice"><%= notice %></p>

<br>
<%= render 'ban_form', customers: @customers %>
<br>
